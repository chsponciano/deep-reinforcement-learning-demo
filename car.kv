#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Car>:
    size: 20, 10
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<Sensor1>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size
<Sensor2>:
    size: 10,10
    canvas:
        Color:
            rgba: 0,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size

<Sensor3>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,1,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<Game>:
    car: game_car
    sensor1: game_sensor1
    sensor2: game_sensor2
    sensor3: game_sensor3

    Car:
        id: game_car
        center: self.parent.center
    Sensor1:
        id: game_sensor1
        center: self.parent.center
    Sensor2:
        id: game_sensor2
        center: self.parent.center
    Sensor3:
        id: game_sensor3
        center: self.parent.center
